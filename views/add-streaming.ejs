<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top">
          <h4 class="mb-0"><i class="bi bi-folder-plus"></i> Create Streaming</h4>
        </div>

        <div class="card-body p-4">
          <form action="/save-streaming" method="POST">

            <div class="mb-3">
              <label class="form-label fw-bold">Streaming Name</label>
              <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
            </div>

            <div class="mb-3">
              <label class="form-label fw-bold">Streaming Location</label>
              <input type="text" name="location" class="form-control form-control-lg" placeholder="Enter Location Streaming">
            </div>

            <button type="submit" class="btn btn-success w-100 py-2 mt-2">
              <i class="bi bi-save"></i> Save
            </button>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>

