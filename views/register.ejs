<% if (typeof errors !== "undefined" && errors.length > 0) { %>
<script>
  Swal.fire({
    icon: "error",
    title: "Gagal Registrasi",
    html: `
      <% errors.forEach(e => { %>
        <div><%= e.msg %></div>
      <% }); %>
    `,
    showConfirmButton: false,
    timer: 2000,
    width: "350px"
  });
</script>
<% } %>

<div class="center">
  <h1 class= "center">Register</h1>
  <form method="post" action="/register">
    <div class="inputbox">
      <input type="text" name="username" required="required">
      <span>Username</span>
    </div>
    <div class="inputbox">
      <input type="text" name="email" required="required">
      <span>Email</span>
    </div>
    <div class="inputbox">
      <input type="password" name="password" required="required">
      <span>Password</span>
    </div>
    <div class="inputbox">
      <button class="btn btn-outline-success btn-login">Register</button>
    </div>
  <div class="links">
      <a href="/login">Login</a>
  </div>
  </form>
</div>
